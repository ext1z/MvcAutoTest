@model List<Ticket>

@{
    ViewData["Title"] = "Tickets";
}



<div class="text-center">


<h1>Total Tickets</h1>
@for(int i = 0; i < Model.Count; i++)
{
     var ticketNumber  = $"Ticket {i+1}  {Model[i].CorrectCount}/{Model[i].QuestionsCount}";

     <a class="btn1 btn btn-primary mb-3"
        asp-controller="Examination"
        asp-action="Exam"
        asp-route-ticketId=@Model[i].Id>@ticketNumber</a> <br />
}
</div>

<style>
    .btn1{
        width: 250px;
        border-radius: 10px;
    }
</style>